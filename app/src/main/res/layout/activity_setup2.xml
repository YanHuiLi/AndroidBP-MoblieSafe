<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:archer="http://schemas.android.com/apk/res/com.example.archer.mobliesafe"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/TitleStyle"
        android:text="2.手机卡绑定"/>
    
    <TextView
        style="@style/ContentStyle"
        android:text="通过绑定SIM卡："/>

    <TextView
        style="@style/ContentStyle"
        android:text="下次重启手机如果发现SIM卡变化"/>

    <TextView
        style="@style/ContentStyle"
        android:text="就会发送手机短信"/>

    <com.example.archer.mobliesafe.view.SettingItemView
        android:id="@+id/siv_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        archer:SetItemTitle="点击绑定SIM卡"
        archer:desc_on="SIM卡已经绑定"
        archer:desc_off="SIM卡没有绑定"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/setup2"/>

        <Button
           style="@style/NextStyle"

           />


        <Button
            style="@style/PreviousStyle"
            />


    </RelativeLayout>

</LinearLayout>