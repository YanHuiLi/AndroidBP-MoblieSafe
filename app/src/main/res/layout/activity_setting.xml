<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:archer="http://schemas.android.com/apk/res/com.example.archer.mobliesafe"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.example.archer.mobliesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        archer:SetItemTitle="自动更新设置"
        archer:desc_on="自动更新已经开启"
        archer:desc_off="自动更新已经关闭"
        />

    <!--看萌狗-->
    <com.example.archer.mobliesafe.view.SettingItemView
        android:id="@+id/siv_watch_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        archer:SetItemTitle="看门狗设置"
        archer:desc_on="看门狗已经开启"
        archer:desc_off="看门狗已经关闭"
        />

    <com.example.archer.mobliesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        archer:SetItemTitle="归属地电话显示设置"
        archer:desc_on="归属地显示已经开启"
        archer:desc_off="归属地显示已经关闭"
        />

    <com.example.archer.mobliesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.example.archer.mobliesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.example.archer.mobliesafe.view.SettingItemView
        android:id="@+id/siv_CallSafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        archer:SetItemTitle="黑名单设置"
        archer:desc_on="黑名单已经开启"
        archer:desc_off="黑名单已经关闭"
        />
</LinearLayout>